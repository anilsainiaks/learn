<%- include('../layouts/ejs/head.ejs')  %>

    <%- include('../layouts/ejs/navigation.ejs') %>

    <main>
        <div class="container">
            <% if(prods.length > 0) { %>
                <div class="row row-cols-1 row-cols-lg-4 g-4">
                    <% for(let product of prods) { %>
                        <div class="col text-center">
                            <div class="card" style="width: 18rem;">
                                <img class="card-img-top" src="/<%= product.imgUrl %>" alt="Card image cap">
                                <div class="card-body">
                                    <h3 class="card-title"><%= product.title %></h3>
                                    <h5 class="card-text">Rs <%= product.price %></h5>
                                    <p class="card-text"><%= product.description %></p>
                                    <a href="/admin/edit-product/<%= product.id %>?edit=true" class="btn btn-primary">Edit</a>
                                  
                                    <input type="hidden" value="<%= product.id %>" name="prodId">
                                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                                    <button class="btn btn-primary" type="button" onclick="deleteButton(this)">Delete</button>
                                </div>
                            </div>
                        </div>
                    <% } %>
                </div>
                <%- include('../layouts/ejs/pagination.ejs') %>
                <% } else { %>
                    <h1>No Products Found</h1>
                <% } %>
        </div>
    </main>

    <script src="/js/admin.js"></script>
<%- include('../layouts/ejs/end.ejs') %>